{
  "name": "@z-lang/parser",
  "version": "0.1.0",
  "description": "ANTLR4-based lexer and parser for z-lang",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": ["dist"],
  "scripts": {
    "generate": "antlr-ng -Dlanguage=TypeScript -v -o src/generated --exact-output-dir grammar/ZLangLexer.g4 grammar/ZLangParser.g4",
    "build": "tsc --build"
  },
  "dependencies": {
    "@z-lang/types": "*",
    "antlr4ng": "^3.0.16"
  }
}
